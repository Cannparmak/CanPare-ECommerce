@model LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}
<style>
    html,
    body {
        height: 100%;
    }

    .form-signin {
        max-width: 330px;
        padding: 1rem;
        background-color: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .form-signin:hover {
            transform: scale(1.02);
        }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

    .text-center {
        text-align: center;
    }

    .form-floating {
        margin-bottom: 1rem;
    }

</style>

<main class="form-signin w-100 m-auto shadow rounded my-5">
    <form asp-action="SignIn">
        <div class="text-center">
            <img class="mb-4" src="~/Img/Canpare (1).png" alt="" width="300" height="250">
            <h1 class="h3 mb-3 fw-normal">Üye Girişi</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div class="form-floating">
            <input asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com" />
            <label for="floatingInput">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating mt-3">
            <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Şifre</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-check text-start my-3">
            <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="checkDefault">
            <label class="form-check-label" for="checkDefault">
                Beni Hatırla
            </label>
        </div>
        <input type="hidden" asp-for="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]" />
        <button class="btn btn-warning w-100 py-2" type="submit">Giriş Yap</button>
    </form>
</main>