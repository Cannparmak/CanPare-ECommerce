@{
    ViewData["Title"] = "Sipariş Tamamlandı";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="p-5 bg-white shadow-sm rounded">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                <h1 class="mt-4 mb-4">Siparişiniz Başarıyla Oluşturuldu!</h1>
                
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success mb-4">
                        @TempData["Success"]
                    </div>
                }
                
                <p class="lead mb-4">
                    Siparişiniz başarıyla alındı ve işleme konuldu. 
                    Siparişinizin durumu hakkında size e-posta ile bilgi verilecektir.
                </p>
                
                <div class="d-flex justify-content-center mt-4">
                    <a href="/" class="btn btn-primary me-3">
                        <i class="bi bi-house-door"></i> Ana Sayfaya Dön
                    </a>
                    <a href="/Products/Index" class="btn btn-outline-success">
                        <i class="bi bi-cart"></i> Alışverişe Devam Et
                    </a>
                </div>
            </div>
            
            <div class="mt-5">
                <h5>Diğer Öne Çıkan Ürünlerimizi Keşfedin</h5>
                <a href="/Products/Index" class="btn btn-link">Tüm Ürünleri Görüntüle</a>
            </div>
        </div>
    </div>
</div>

<style>
    .bi-check-circle-fill {
        animation: pulse 2s ease-in-out;
    }
    
    @@keyframes pulse {
        0% { transform: scale(0.5); opacity: 0; }
        50% { transform: scale(1.2); opacity: 1; }
        100% { transform: scale(1); opacity: 1; }
    }
</style> 